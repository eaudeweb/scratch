endpoints:
  - name: Scratch
    url: http://example:8000 #url to check
    method: GET
    timeout: 15 # seconds
    expectation:
      - type: HTTP_STATUS
        status_range: 200-205
    allowed_fails: 0
    component_id: # the id of the Search component from Cachet
    metric_id:
    action:
      - UPDATE_STATUS
      - CREATE_INCIDENT
